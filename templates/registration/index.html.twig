{% extends 'base.html.twig' %}

{% block title %}Join Us - Registration{% endblock %}

{% block body %}
    <style>
        body {
            margin-top: -4rem;
            background-image: url("{{ asset('images/fintech.jpg') }}");
            background-size: cover; /* Cover the entire page */
            background-position: center; /* Center the background image */
        }

        .form-box {
            width: 40%;
            margin: 6% 0px 0px 3%; /* Center the form on the screen */
            padding: 20px;
            border: 1px solid #ccc;
            background: #efefef;; /* White background for the form */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
            border-radius: 10px;
            max-height: 605px; /* Max height with scrolling */
            overflow-y: auto; /* Enable scrolling within the box */
            position: relative; /* Adjusted for centering */
        }

        .form-box h1 {
            color: #333;
            margin-bottom: 1rem;
            text-align: center;
        }

        .form-box form {
            display: flex;
            flex-direction: column;
        }

        .form-box form input, .form-box form select, .form-box form button {
            padding: 0.5rem;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        .form-box form input:focus, .form-box form select:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0,123,255,.25);
        }

        .form-box form button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .form-box form button:hover {
            background-color: #0056b3;
        }

        /* Custom scrollbar styles */
        .form-box::-webkit-scrollbar {
            width: 5px;
        }

        .form-box::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 5px;
        }

        .form-box::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>

    <div class="form-box">
        <h1>ðŸš€ Join Us Today! ðŸŒŸ</h1>
        <p>Become part of our community and enjoy exclusive benefits! âœ¨</p>
        <form action="{{ path('register') }}" method="post" novalidate>
            {{ form_start(form) }}
            <div>{{ form_row(form.email) }}</div>
            <div>{{ form_row(form.password.first) }}{{ form_row(form.password.second) }}</div>
            <div>{{ form_row(form.first_name) }}</div>
            <div>{{ form_row(form.last_name) }}</div>
            <div>{{ form_row(form.phone_number) }}</div>
            <div>{{ form_row(form.cin) }}</div>
            <div>{{ form_row(form.birth_date) }}</div>
            <div>{{ form_row(form.address) }}</div>
            <div>{{ form_row(form.transaction_limit) }}</div>
            <div>{{ form_row(form.account_type) }}</div>
            <div>{{ form_row(form.register) }}</div>
            {{ form_end(form) }}
        </form>
        <p>Already have an account? <a href="{{ path('app_login') }}">Login</a></p>
        <h5 class="mt-5"><a href="{{ path('app_landing_page') }}">back to home ?</a></h5>
    </div>
{% endblock %}
